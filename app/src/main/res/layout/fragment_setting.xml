<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0D4E6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtYear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:background="@drawable/corner"
        android:padding="10px"
        android:text="Nhắc nhở"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/arima_madurai_extrabold" />

    <ListView
        android:id="@+id/lvLichHen"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="30px"
        android:background="#C0D4E6"
        android:divider="@android:color/black"
        android:dividerHeight="2px"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_blue_dark"
        />

    <Button
        android:id="@+id/btnThem"
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:background="@drawable/corner"
        android:padding="20px"
        android:text="(+) Thêm nhắc nhở"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnXoa"
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:background="@drawable/corner"
        android:padding="20px"
        android:text="(-) Xóa nhắc nhở"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>