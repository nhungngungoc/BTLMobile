<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800px"
    android:layout_height="wrap_content"
    android:background="#A39365"
    android:orientation="vertical"
    android:padding="30px">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mật khẩu cũ"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="16sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtOldPass"
        android:textSize="18sp"
        android:textColor="#000000"
        android:password="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mật khẩu mới"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewPass"
        android:textSize="18sp"
        android:textColor="#000000"
        android:password="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu mới"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewPassConfirm"
        android:textSize="18sp"
        android:textColor="#000000"
        android:password="true"/>

    <TextView
        android:id="@+id/txtWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textStyle="italic" />
    <Button
        android:id="@+id/btnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_corner"
        android:text="OK"
        android:textColor="@android:color/black"
        android:layout_marginTop="30px"/>

</LinearLayout>